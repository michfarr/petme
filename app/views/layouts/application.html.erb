<!DOCTYPE html>
<html>
<head>
  <title>PetMe</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  
</head>
<body>
  <div class="container-layout">
    <nav class="navbar transparent navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
          <%= link_to "PetMe", root_path, class: "navbar-brand" %>
          <div class="search-btn">
            <%= form_tag '/index', :method => 'get', id: "search-form", class: "navbar-form navbar-left", role:"search" do %>
            <div class="form-group">
              <p>
                <%= text_field_tag :search, params[:search], placeholder: "Search name", class: "form-control" %>
                <%= submit_tag "Search", :name => nil, class:"btn btn-default" %>
              </p>
              <% end %>
            </div>
          </div>
      </div>
    </nav>
  </div>
  <div class="container-show">

    <%= yield %>
  </div>

    <div id="footer">
      <p class="footer">Created by us with love!<span class="glyphicon glyphicon-heart"></span>
    </div>

  </body>
</html>
