<div class="container">
  <h1>
    <strong>Name:</strong>
    <%= @user.name %>
  </h1>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <%= image_tag(@user.profile_picture) %>
  </p>

  <h2>My pets</h2>

  <% pets = @user.pets %>

  <%= render pets, hide_user: true %>


  <!--- <%= link_to 'Edit', edit_user_path(@user) %> | ---->
  <%= link_to 'Edit', edit_user_path, class: "btn btn-default" %> |
  <%= link_to 'Back', users_path, class: "btn btn-default" %>
</div>
